<?xml version="1.0" encoding="UTF-8"?>
<!--
	DataSource used by EJBCA's External RA GUI

	$Id: externalragui-ds.xml 16250 2013-01-31 12:58:09Z anatom $
 -->
<datasources>
    <local-tx-datasource>
       <jndi-name>ExternalRAGUIMessageDS</jndi-name>

       <connection-url>${externalra-gui.datasource.jdbc-url}</connection-url>
       <driver-class>${externalra-database.driver}</driver-class>
       <user-name>${externalra-gui.datasource.username}</user-name>
       <password>${externalra-gui.datasource.password}</password>

       <min-pool-size>5</min-pool-size>
       <max-pool-size>20</max-pool-size>
       <idle-timeout-minutes>5</idle-timeout-minutes>
    </local-tx-datasource>
</datasources>